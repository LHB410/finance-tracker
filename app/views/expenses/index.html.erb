<h1>Let's track our finances</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Amount</th>
    <th>Category</th>
    <th>Edit/Delete</th>
  </tr>
  <% @expenses.each do |expense| %>
    <tr>
      <td><%= expense.name %></td>
      <td><%= expense.amount %></td>
      <td><%= expense.category %></td>
      <td><%= link_to 'Edit', edit_expense_path(expense) %><%= button_to "Delete", expense_path(expense), method: :delete, data: { turbo_method: :delete, :turbo_confirm => 'Are you sure?' }  %></td>
    </tr>
  <% end %>
  <tr>
    <td></td>
  </tr>
</table>
<h1>You have <%= @total %> left after outgoing expenses </h1>

<%= render 'expenses/new', expense: @expense %>
