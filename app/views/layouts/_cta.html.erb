<div class="content">
  <div class="cta" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1554224155-6726b3ff858f?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=3711&q=80);">
    <div class="cta-wrapper">
      <div class="text">
        <h1>Track your finances with ease</h1>
      </div>
      <div class="nav-link">
        <%= button_to new_user_registration_path, method: :get, class: 'btn' do %>
          Sign Up
        <% end %>
        <%= button_to new_user_session_path, class: 'btn btn-dark' do %>
          Sign In
        <% end %>
      </div>
    </div>
