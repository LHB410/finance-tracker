    <div class="icon-wrapper">
      <h3>Your details secure and safe with 0Auth2 </h3>
      <%= image_tag 'finance.svg', class: "icon"  %>
    </div>
    <div class="icon-wrapper">
      <h3>Share with your family to keep everthing together</h3>
      <%= image_tag 'finance.svg', class: "icon"  %>
    </div>
  </div>
</div>

